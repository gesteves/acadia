<% unless data.goodreads.empty? %>
  <section class="b-card b-list">
    <h1>Reading</h1>
    <ul>
      <% data.goodreads.each do |book| %>
        <li>
          <div class="b-list__item">
            <a href="<%= book.url %>" class="b-list__image">
              <%= goodreads_image_tag(book) %>
            </a>
            <div class="b-list__meta">
              <span class="b-list__eyebrow">
                <%= book.shelf.gsub("-", " ") %>
              </span>
              <a href="<%= book.url %>" class="b-list__title"><%= book.title %></a>
              <span class="b-list__author"><%= book.author %></span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>