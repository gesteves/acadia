<section class="b-card b-instagram">
  <h3>Instagram</h3>
  <ol class="b-instagram__photo-list">
    <% data.instagram.each do |photo| %>
      <li class="b-instagram__photo-item">
        <a href="<%= photo.link %>">
          <% if photo.caption.nil? %>
            <img src="<%= image_path "instagram/#{photo.id}_640.jpg" %>" alt="Instagram photo" class="b-instagram__photo" />
          <% else %>
            <img src="<%= image_path "instagram/#{photo.id}_640.jpg" %>" alt="<%= photo.caption.text %>" class="b-instagram__photo" />
          <% end %>
        </a>
      </li>
    <% end %>
  </ol>
</section>