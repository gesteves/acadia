<section class="b-card b-photoblog">
<h3>Photoblog</h3>
<% data.photoblog.response.posts.each do |photo| %>
  <a href="<%= photo.post_url %>">
    <% if photo.caption.nil? %>
      <img src="<%= image_path "photoblog/#{photo.id}_original.jpg" %>" alt="Latest from my photoblog" />
    <% else %>
      <img src="<%= image_path "photoblog/#{photo.id}_original.jpg" %>" alt="<%= photo.caption %>" />
    <% end %>
  </a>
  <% unless photo.caption.nil? %>
    <%= photo.caption %>
  <% end %>
  <p class="timestamp"><a href="<%= photo.post_url %>">Published on <%= formatted_date_in_eastern(photo.date, "%d %B %Y") %></a></p>
<% end %>
</section>